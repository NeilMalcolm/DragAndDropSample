<?xml version="1.0" encoding="UTF-8"?>
<v:BaseDropTarget xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="DragAndDrop.Views.HighlightingDropTarget"
       xmlns:local="clr-namespace:DragAndDrop"
       x:DataType="local:IDropReceiver"
       xmlns:v="clr-namespace:DragAndDrop.Views">
    <Label x:Name="DisplayLabel"
           Text="{Binding Source={RelativeSource Mode=FindAncestor, 
                                                 AncestorType={x:Type v:HighlightingDropTarget}}, 
                          Path=Text}"/>
</v:BaseDropTarget>